                        img(src="/static/img/index/banner3.jpg" alt="")
                        img(src="/static/img/index/banner4.jpg" alt="")
                div.signin-contianer.col-xs-3
                    div.signin-form.form-horizontal.form
                        div.signin
                            if isAuthenticated
                                div.col-xs-12
                                    img.col-xs-3(src='#{credential.headImg}',style='height:60px;')
                                    ul.index-user-info.col-xs-9
                                        li HI!
                                            strong  #{credential.name}
                                        li 您有0笔订单未处理
                                        li
                                            span
                                                a.logout-btn(href='/logout') [注销]
                                            span
                                                a(href='/user/#{credential.id}') [查看]
                                div.col-xs-12
                                    a.export.user-info-container.col-xs-4
                                        div.user-info-number 0
                                        div.user-info-word 待发货
                                    a.inport.user-info-container.col-xs-4
                                        div.user-info-number 0
                                        div.user-info-word 待收货
                                    a.comment.user-info-container.col-xs-4
                                        div.user-info-number 0
                                        div.user-info-word 待评价
                                
                            else
                                div.signin-error
                                div.form-group
                                    input#input-signin-account.form-control(type='text',placeholder='请输入帐号',name='account')
                                div.form-group
                                    input#input-signin-password.form-control(type='password',placeholder='请输入密码',name='password',style='margin-top:10px;')
                                div.checkbox
                                    label
                                        input#input-remember(type="checkbox",name='is_remember',style="margin-left:0px;")
                                        |  记住我
                                div.forgot-password
                                    a 忘记密码?
                                btn.btn.btn-danger.signin-btn 登录
                    div.pay-phone
                        div.pay-phone-icon.col-xs-3
                            i.fa.fa-mobile.fa-3x
                            div 手机充值
                        div.pay-phone-input.col-xs-9
                            div.input-group.input-group-sm
                                span.input-group-addon 号码
                                input.phonenumber.form-control(type='text',placeholder='请输入手机号')
                            div.input-group.input-group-sm
                                span.input-group-addon 金额
                                select.form-control.phone-price
                                    option 10元
                                    option 30元
                                    option 50元
                                    option 100元
                            a.btn.btn-warning.btn-sm.btn-phone 充值
