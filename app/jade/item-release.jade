extends layout-store

block title
    | 发布商品

block css
    link(rel='stylesheet', type='text/css', href='/static/css/item-release.css')

block js
    script(type="text/javascript",src="/assest/vendor/ueditor/ueditor.config.js")
    script(type="text/javascript",src="/assest/vendor/ueditor/ueditor.all.js")
    script(type="text/javascript",src="/assest/vendor/ueditor/lang/zh-cn/zh-cn.js")
    script(type="text/javascript",src="/assest/js/item-release.js")

block container
    div#imageTemp.col-xs-3
        div.thumbnail
            img.item-img(data-src="holder.js/150x150")
            a.btn
                i.fa.fa-times-circle.item-img-delete
    ul.nav.nav-tabs
        li.active
            a 发布商品
    form#form-item-release.form-horizontal.col-xs-12(role='form')
        div.form-group
            label.col-xs-2.control-label *商品名称:
            div.col-xs-6
                input#input-item-name.form-control(type='text',name='item_release_name',value=(item?item.name:''))
            div.tip 商品名称不超过40个字符
        div.form-group
            label.col-xs-2.control-label *商品大类:
            div.col-xs-3
                select#item-release-big-class.form-control
                    if item
                        option #{item.product.belong}
                    option(value='0') 请选择...
        div.form-group
            label.col-xs-2.control-label *商品小类:
            div.col-xs-3
                select#item-release-small-class.form-control(disabled=(item?false:true))
                    if item
                        option(value='#{item.product.id}') #{item.product.name}
                    option(value='0') 请选择...
        div.form-group
            label.col-xs-2.control-label *商品图片:
            div.col-xs-10
                div.row.image-container
                    div.col-xs-3
                        div.thumbnail
                            img.item-img(data-src="holder.js/150x150")
                            a.btn
                                i.fa.fa-times-circle.item-img-delete
                    div.col-xs-3
                        div.thumbnail
                            img.item-img(data-src="holder.js/150x150")
                            a.btn
                                i.fa.fa-times-circle.item-img-delete
                    div.col-xs-3
                        div.thumbnail
                            img.item-img(data-src="holder.js/150x150")
                            a.btn
                                i.fa.fa-times-circle.item-img-delete
                    div.col-xs-3
                        div.thumbnail
                            img.item-img(data-src="holder.js/150x150")
                            a.btn
                                i.fa.fa-times-circle.item-img-delete
                div#item-upload-img
        div.form-group
            label.col-xs-2.control-label *关键字:
            div.col-xs-4
                input#input-item-key.form-control(type='text',name='item_release_key',value=(item?item.keywords:''))
            div.tip 多个关键字以','分隔
        div.form-group
            label.col-xs-2.control-label *价格:
            div.input-group.col-xs-3
                span.input-group-addon ￥
                input#input-item-price.form-control(type='number',name='item_release_price',value=(item?item.price:''))
        div.form-group
            label.col-xs-2.control-label 商品描述:
            if item
                script.col-xs-10(id="item-desc",name="content",type="text/plain") #{item.description}
            else
                script.col-xs-10(id="item-desc",name="content",type="text/plain")
        div.form-group
            div.col-xs-offset-2.col-xs-9
                a#item-release-btn.btn.btn-success 确认发布
                a.btn.btn-default(href='/') 返回首页